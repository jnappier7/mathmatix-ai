# .env.test.example
# Test environment configuration
# Copy this file to .env.test and fill in values for testing

# Use a separate test database
MONGO_URI=mongodb://localhost:27017/mathmatix_test

# Test session secret (can be any string)
SESSION_SECRET=test_session_secret_12345

# OAuth credentials (can be dummy values for unit tests)
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

MICROSOFT_CLIENT_ID=test_microsoft_client_id
MICROSOFT_CLIENT_SECRET=test_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/auth/microsoft/callback

# AI API keys (can be dummy values for unit tests, real for integration tests)
OPENAI_API_KEY=test_openai_key
ELEVENLABS_API_KEY=test_elevenlabs_key
MATHPIX_APP_ID=test_mathpix_id
MATHPIX_APP_KEY=test_mathpix_key

# Email (optional for tests - will be mocked)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=test@example.com
# SMTP_PASS=test_password

# Server config
PORT=3001
NODE_ENV=test
BASE_URL=http://localhost:3001
